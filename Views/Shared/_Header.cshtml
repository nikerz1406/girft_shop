<div class="container">
    <div class="inner-header">
        <div class="row">
            <div class="col-lg-2 col-md-2">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Asset/")img/logo.png" alt="">
                    </a>
                </div>
            </div>
            <div class="col-lg-7 col-md-7">
                <div class="advanced-search">
                    <button type="button" class="category-btn">Danh mục</button>
                    <div class="input-group">
                        <input type="text" placeholder="Bạn muốn tìm ?">
                        <button type="button"><i class="ti-search"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 text-right col-md-3">
                <ul class="nav-right">
                    <li class="heart-icon">
                        <a href="#">
                            <i class="icon_heart_alt"></i>
                            <span>1</span>
                        </a>
                    </li>
                    <li class="cart-icon">
                        <a href="#">
                            <i class="icon_bag_alt"></i>
                            @if (@ViewBag.countCart != null)
                            {
                                <span>@ViewBag.countCart</span>
                            }
                            else
                            {
                                <span>0</span>
                            }

                        </a>
                        <div class="cart-hover">
                            <div class="select-items">
                                <table>
                                    <tbody>
                                        @if (@ViewData["cart"] != null)
                                        {
                                            foreach (var item in @ViewData["cart"] as List<Girft_shop.Models.SubProducts>)
                                            {
                                                <tr>
                                                    <td class='si-pic'><img width='50' src='@item.img' alt=''></td>
                                                    <td class='si-text'>
                                                        <div class='product-selected'>
                                                            <p>@item.price x @item.quantity</p>
                                                            <h6>@item.name</h6>
                                                        </div>
                                                    </td>
                                                    <td class='si-close'>
                                                        <i class='ti-close'></i>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        @*item select append here*@
                                    </tbody>
                                </table>
                            </div>
                            <div class="select-total">
                                <span>Tổng cộng:</span>
                                @if (@ViewBag.totalCart != null)
                                {
                                    <h5>@ViewBag.totalCart</h5>
                                }
                                else
                                {
                                    <h5>0VND</h5>
                                }

                            </div>
                            <div class="select-button">
                                <a href="@Url.Action("ShopCart", "Shop")" class="primary-btn view-card">Giỏ hàng</a>
                                <a href="@Url.Action("Index", "Checkout")" class="primary-btn checkout-btn">Thanh toán</a>
                            </div>
                        </div>
                    </li>
                    @if (@ViewBag.totalCart != null)
                    {
                        <li class="cart-price">@ViewBag.totalCart</li>
                    }
                    else
                    {
                        <li class="cart-price">0 VNĐ</li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>
